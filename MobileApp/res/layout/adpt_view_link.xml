<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_linklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_linkimage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_playvideoicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/play_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <WebView
            android:id="@+id/wv_videoembeded"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@android:color/transparent"
            android:scrollbars="none" />

        <Button
            android:id="@+id/ll_linkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/link_icon"
            android:text="test"
            android:textColor="#840000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>